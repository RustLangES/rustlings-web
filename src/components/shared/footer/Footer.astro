---
import { IconBrandDiscord, IconBrandGithub, IconBrandLinkedin } from "@tabler/icons-react"

const logoSrc = "/logo.svg"
const githubUrl = "https://github.com/RustLangES/rustlings-web"
const linkedinUrl = "https://www.linkedin.com/company/rustlanges/posts/?feedView=all"
const discordUrl = "https://discord.com/channels/778674594856960012/1292726289479893044"

const socialLinks = [
	{ href: githubUrl, icon: IconBrandGithub, label: "GitHub" },
	{ href: linkedinUrl, icon: IconBrandLinkedin, label: "LinkedIn" },
	{ href: discordUrl, icon: IconBrandDiscord, label: "Discord" },
]
---

<footer
  class="w-full bg-[var(--editor-bg)]/95 backdrop-blur-md border-t border-[var(--stroke-color)] shadow-inner py-12"
>
  <div
    class="max-w-7xl mx-auto px-6 flex flex-col sm:flex-col md:flex-row items-center justify-between gap-8"
  >
    <a
      href="#hero"
      class="flex items-center gap-3 mb-6 md:mb-0 justify-center md:justify-start w-full md:w-auto"
    >
      <img src={logoSrc} alt="Rustlings Web" class="h-12 w-12" />
      <span class="text-[var(--fg)] font-bold text-2xl tracking-wide">Rustlings</span>
    </a>

    <div class="flex justify-center md:justify-end items-center gap-6 w-full md:w-auto">
      {
        socialLinks.map(link => (
          <a
            href={link.href}
            target="_blank"
            aria-label={link.label}
            class="text-[var(--fg)] hover:text-[var(--yellow)] transition-transform duration-200 transform hover:scale-110"
          >
            <link.icon size={28} className="w-7 h-7" />
          </a>
        ))
      }
    </div>
  </div>

  <div class="mt-8 text-center text-sm text-[var(--fg)]/70 px-4">
    &copy; {new Date().getFullYear()} Rustlings Web. Todos los derechos reservados.
  </div>
</footer>
