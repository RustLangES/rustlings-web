---
import { IconChevronLeft, IconChevronRight } from "@tabler/icons-react"

const { previousPath, nextPath } = Astro.props
---

<div class="flex items-center gap-3">
  {
    previousPath && (
      <a
        href={`/content/${previousPath}`}
        aria-label="Anterior"
        class="flex items-center justify-center w-10 h-10 rounded-full border border-stroke-color hover:border-yellow hover:text-yellow transition-all duration-300"
      >
        <IconChevronLeft size={22} stroke={2} />
      </a>
    )
  }
  {
    nextPath && (
      <a
        href={`/content/${nextPath}`}
        aria-label="Siguiente"
        class="flex items-center justify-center w-10 h-10 rounded-full border border-stroke-color hover:border-yellow hover:text-yellow transition-all duration-300"
      >
        <IconChevronRight size={22} stroke={2} />
      </a>
    )
  }
</div>
