---
import IconArrowBigLeftLinesFilled from "~icons/tabler/arrow-big-left-lines-filled"
import IconArrowBigRightLinesFilled from "~icons/tabler/arrow-big-right-lines-filled"

const { previous, next } = Astro.props
---

<nav class="w-full flex items-center justify-between pb-2 mt-auto min-w-[400px]" aria-label="NavegaciÃ³n de contenido">
  <a
    {...(previous
      ? { href: `/${previous.slug}`, "aria-label": `Anterior: ${previous.title}` }
      : { "aria-disabled": "true", role: "link" })}
    class:list={[
      "flex items-center gap-2 h-14 px-4 group transition-all duration-200 rounded-md",
      previous
        ? "hover:bg-dark-fg/40"
        : "opacity-50 cursor-not-allowed pointer-events-none",
    ]}
  >
    <span
      class="block w-6 h-6 rounded-lg transition-all duration-200 transform group-hover:-translate-x-1 group-hover:text-yellow"
    >
      <IconArrowBigLeftLinesFilled font-size={20} />
    </span>
    <div class="text-left flex flex-col">
      <span
        class:list={[
          "text-md font-medium",
          previous ? "text-yellow" : "text-stroke-color",
        ]}
      >
        Anterior
      </span>
      <span class="text-xs text-[#ccc]">{previous?.title || "-"}</span>
    </div>
  </a>

  <a
    {...(next
      ? { href: `/${next.slug}`, "aria-label": `Siguiente: ${next.title}` }
      : { "aria-disabled": "true", role: "link" })}
    class:list={[
      "flex items-center gap-2 h-14 px-4 group transition-all duration-200 rounded-md",
      next
        ? "hover:bg-dark-fg/40"
        : "opacity-50 cursor-not-allowed pointer-events-none",
    ]}
  >
    <div class="text-right flex flex-col">
      <span
        class:list={[
          "text-md font-medium",
          next ? "text-yellow" : "text-stroke-color",
        ]}
      >
        Siguiente
      </span>
      <span class="text-xs text-[#ccc]">{next?.title || "-"}</span>
    </div>
    <span
      class="block w-6 h-6 rounded-lg transition-all duration-200 transform group-hover:translate-x-1 group-hover:text-yellow"
    >
      <IconArrowBigRightLinesFilled font-size={20} />
    </span>
  </a>
</nav>
