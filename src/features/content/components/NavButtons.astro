---
import { IconChevronLeft, IconChevronRight } from "@tabler/icons-react"
---

<div class="flex items-center gap-3">
  <button
    type="button"
    aria-label="Anterior"
    class="flex items-center justify-center w-10 h-10 rounded-full border border-[var(--stroke-color)] hover:border-[var(--yellow)] hover:text-[var(--yellow)] transition-all duration-300"
  >
    <IconChevronLeft size={22} stroke={2} />
  </button>

  <button
    type="button"
    aria-label="Siguiente"
    class="flex items-center justify-center w-10 h-10 rounded-full border border-[var(--stroke-color)] hover:border-[var(--yellow)] hover:text-[var(--yellow)] transition-all duration-300"
  >
    <IconChevronRight size={22} stroke={2} />
  </button>
</div>
