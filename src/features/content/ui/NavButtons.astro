---
import { IconArrowBigLeftLinesFilled, IconArrowBigRightLinesFilled } from "@tabler/icons-react"

const { previous, next } = Astro.props
---

<nav class="w-full flex items-center justify-between min-w-[200px]" aria-label="NavegaciÃ³n de contenido">
  <a
    {...((previous && { href: `/${previous.slug}`, "aria-label": `Anterior: ${previous.title}` }) || {})}
    class:list={[
      "flex items-center gap-2 h-14 px-4 group hover:bg-dark-fg/40 transition-all duration-200 rounded-md",
      { "opacity-50 pointer-events-none": !previous }
    ]}
  >
    <span class="block w-6 h-6 rounded-lg group-hover:text-yellow transition-all duration-200 transform group-hover:-translate-x-1">
      <IconArrowBigLeftLinesFilled size={20} stroke={2} />
    </span>
    <div class="text-left flex flex-col">
      <span class:list={["text-md font-medium", previous ? "text-yellow" : "text-stroke-color"]}>
        Anterior
      </span>
      <span class="text-xs text-[#ccc]">{previous?.title || "-"}</span>
    </div>
  </a>

  <a
    {...((next && { href: `/${next.slug}`, "aria-label": `Siguiente: ${next.title}` }) || {})}
    class:list={[
      "flex items-center gap-2 h-14 px-4 group hover:bg-dark-fg/40 transition-all duration-200 rounded-md",
      { "opacity-50 pointer-events-none": !next }
    ]}
  >
    <div class="text-right flex flex-col">
      <span class:list={["text-md font-medium", next ? "text-yellow" : "text-stroke-color"]}>
        Siguiente
      </span>
      <span class="text-xs text-[#ccc]">{next?.title || "-"}</span>
    </div>
    <span class="block w-6 h-6 rounded-lg group-hover:text-yellow transition-all duration-200 transform group-hover:translate-x-1">
      <IconArrowBigRightLinesFilled size={20} stroke={2} />
    </span>
  </a>
</nav>
