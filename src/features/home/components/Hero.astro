---
import { IconBrandGithub } from "@tabler/icons-react"
import Section from "../../../components/shared/sections/Section.astro"

import { content } from "../../../utils/lib/content.config"

const firstTutorial = content.find((t) => t.frontmatter.slug === "introduccion")
---

<Section
  id="hero"
  className="relative min-h-screen flex flex-col justify-center items-center text-center text-px-6"
>
  <a
    href="https://github.com/RustLangES/rustlings-web"
    target="_blank"
    rel="noopener noreferrer"
    class="absolute top-4 right-6 text-secondary hover:text-yellow transition-transform duration-300 hover:scale-110"
  >
    <IconBrandGithub />
  </a>

  <img class="w-48 sm:w-56 md:w-64 logo mb-8" src="/logo.svg" alt="rustlings" />

  <div class="my-10">
    <h1 class="font-semibold text-4xl sm:text-5xl md:text-6xl mb-4">RustLings Web</h1>
    <h3 class="text-lg sm:text-xl opacity-90">Aprender Rust nunca fue tan f√°cil</h3>
  </div>

  <div class="flex flex-col sm:flex-row gap-4 mt-6">
    <a
      href={`/content/${firstTutorial?.frontmatter.slug}`}
      class="px-8 py-2 border rounded-lg border-[var(--stroke-color)] hover:border-[var(--fg)] hover:-translate-y-1 hover:scale-105 cursor-pointer duration-300"
    >
      Aprender
    </a>
  </div>
</Section>

<style>
  .logo {
    -webkit-filter: drop-shadow(0 -6mm 100mm var(--color-yellow));
    filter: drop-shadow(0 -6mm 90mm var(--color-yellow));
  }
</style>
