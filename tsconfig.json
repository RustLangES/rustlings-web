{
	"extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist"],
	"compilerOptions": {
		"baseUrl": ".",
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"paths": {
			"~/*": ["./src/*"],
			"@components/*": ["./src/components/*"],
			"@styles/*": ["./src/styles/*"],
			"@layouts/*": ["./src/layouts/*"],
			"@assets/*": ["./src/assets/*"],
			"@features/*": ["./src/features/*"],
			"@utils/*": ["./src/utils/*"]
		}
	}
}
